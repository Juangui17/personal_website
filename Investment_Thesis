    <script>
        let growthChart;
        let boostChart;

        const VISUAL_START_AGE = 20;
        const VISUAL_END_AGE = 65;
        // Annual Investment used for the main growth comparison charts
        const ANNUAL_INVESTMENT = 1000; 
        const NOMINAL_RETURN = 0.07;
        const AVERAGE_INFLATION = 0.03;
        const REAL_RETURN = NOMINAL_RETURN - AVERAGE_INFLATION;
        // Initial value for inflation/cash comparison charts
        const INFLATION_INITIAL_VALUE = 10000; 
        const SAVINGS_RETURN = 0.01;
        const TARGET_RETURN_BEAT_INFLATION = 0.04;
        const allAges = Array.from({ length: (VISUAL_END_AGE - VISUAL_START_AGE) + 1 }, (_, i) => VISUAL_START_AGE + i);
        const yearsElapsed = allAges.map(age => age - VISUAL_START_AGE);


        function calculateInvestmentGrowth(startAge, annualLumpSum, monthlyContribution, annualRate) {
            let portfolioValue = 0;
            const annualMonthlyTotal = monthlyContribution * 12; 
            
            const history = [];
            for (let age = VISUAL_START_AGE; age <= VISUAL_END_AGE; age++) {
                
                if (age >= startAge) {
                    portfolioValue += annualLumpSum + annualMonthlyTotal;
                }
                
                if (age >= startAge) {
                     portfolioValue *= (1 + annualRate);
                }

                history.push({ age: age, value: portfolioValue });
            }
            return history;
        }

        function calculateRealValue(initialValue, years, nominalRate, inflationRate) {
            const realRate = (1 + nominalRate) / (1 + inflationRate) - 1;
            return initialValue * Math.pow(1 + realRate, years);
        }

        // The toggleSeries function has been entirely removed as requested.

        // --- Chart 1: Investment Growth Initialization (Nominal Value Comparison) ---
        function initGrowthChart() {
            const idealNominalData = calculateInvestmentGrowth(20, ANNUAL_INVESTMENT, 0, NOMINAL_RETURN);
            const currentNominalData = calculateInvestmentGrowth(25, ANNUAL_INVESTMENT, 0, NOMINAL_RETURN);
            const lateNominalData = calculateInvestmentGrowth(35, ANNUAL_INVESTMENT, 0, NOMINAL_RETURN);

            const idealNominalValues = idealNominalData.map(d => d.value);
            const currentNominalValues = allAges.map(age => {
                if (age < 25) return null;
                const dataPoint = currentNominalData.find(d => d.age === age);
                return dataPoint ? dataPoint.value : null;
            });
            const lateNominalValues = allAges.map(age => {
                if (age < 35) return null;
                const dataPoint = lateNominalData.find(d => d.age === age);
                return dataPoint ? dataPoint.value : null;
            });

            const ctxGrowth = document.getElementById('growthChart').getContext('2d');
            growthChart = new Chart(ctxGrowth, {
                type: 'line',
                data: {
                    labels: allAges,
                    datasets: [{
                        label: 'Ideal (Age 20) - Nominal Value',
                        data: idealNominalValues,
                        borderColor: '#00A6A6', // Green/Teal
                        backgroundColor: 'rgba(0, 166, 166, 0.1)',
                        borderWidth: 4, pointRadius: 0, tension: 0.4, fill: true,
                    }, {
                        label: 'Current (Age 25) - Nominal Value',
                        data: currentNominalValues,
                        borderColor: '#7A5BCC', // Purple
                        backgroundColor: 'rgba(122, 91, 204, 0.1)',
                        borderWidth: 3, pointRadius: 0, tension: 0.4, fill: true,
                    }, {
                        label: 'Late (Age 35) - Nominal Value',
                        data: lateNominalValues,
                        borderColor: '#F26D3D', // Orange/Red
                        backgroundColor: 'rgba(242, 109, 61, 0.1)',
                        borderWidth: 3, pointRadius: 0, tension: 0.4, fill: true,
                    }]
                },
                options: {
                    responsive: true, maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Portfolio Value (€)', font: { size: 14, weight: '600' } },
                            ticks: { callback: function(value, index, values) { 
                                return '€' + (value / 1000000).toFixed(2) + 'M'; 
                            } }
                        },
                        x: {
                            title: { display: true, text: 'Age', font: { size: 14, weight: '600' } }
                        }
                    },
                    plugins: {
                        legend: { position: 'top', labels: { font: { size: 14, weight: '600' } } },
                        tooltip: { mode: 'index', intersect: false, callbacks: {
                            title: (tooltipItems) => "Age: " + tooltipItems[0].chart.data.labels[tooltipItems[0].dataIndex],
                            label: (context) => context.dataset.label + ': ' + new Intl.NumberFormat('de-DE', { style: 'currency', currency: 'EUR' }).format(context.parsed.y)
                        } }
                    }
                }
            });
        }
        
        // --- Chart 2 & 3: Inflation Charts Initialization ---
        function initInflationCharts() {
            const mattressValues = yearsElapsed.map(y => calculateRealValue(INFLATION_INITIAL_VALUE, y, 0, AVERAGE_INFLATION));
            const savingsValues = yearsElapsed.map(y => calculateRealValue(INFLATION_INITIAL_VALUE, y, SAVINGS_RETURN, AVERAGE_INFLATION));
            const targetValues = yearsElapsed.map(y => calculateRealValue(INFLATION_INITIAL_VALUE, y, TARGET_RETURN_BEAT_INFLATION, AVERAGE_INFLATION));

            // Chart 2: Savings Inflation Comparison
            const ctxSavingsInflation = document.getElementById('savingsInflationChart').getContext('2d');
            new Chart(ctxSavingsInflation, {
                type: 'line',
                data: {
                    labels: allAges,
                    datasets: [{
                        label: 'Under the Mattress (0% Nominal Return)', data: mattressValues,
                        borderColor: '#F26D3D', backgroundColor: 'rgba(242, 109, 61, 0.2)',
                        borderWidth: 3, pointRadius: 0, tension: 0.4, fill: false,
                    }, {
                        label: 'Savings Account (1% Nominal Return)', data: savingsValues,
                        borderColor: '#00A6A6', backgroundColor: 'rgba(0, 166, 166, 0.2)',
                        borderWidth: 3, pointRadius: 0, tension: 0.4, fill: false,
                    }, {
                        label: 'Target (4% Nominal Return - 1% Real Gain)', data: targetValues,
                        borderColor: '#3A4ED2', backgroundColor: 'rgba(58, 78, 210, 0.2)',
                        borderWidth: 3, pointRadius: 0, tension: 0.4, fill: false,
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'top' } } }
            });

            // Chart 3: Cash Erosion
            const ctxCashErosion = document.getElementById('cashErosionChart').getContext('2d');
            new Chart(ctxCashErosion, {
                type: 'line',
                data: {
                    labels: allAges,
                    datasets: [{
                        label: 'Real Purchasing Power of €10,000 (0% Return)', data: mattressValues,
                        borderColor: '#F26D3D', backgroundColor: 'rgba(242, 109, 61, 0.2)',
                        borderWidth: 3, pointRadius: 0, tension: 0.4, fill: 'start',
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
            });
        }
        
        // --- Chart 4: Monthly Boost Initialization and Update ---
        function updateBoostChart() {
            const monthlyAmount = parseFloat(document.getElementById('monthlyAmount').value) || 0;
            
            const originalIdealData = calculateInvestmentGrowth(20, ANNUAL_INVESTMENT, 0, NOMINAL_RETURN);
            const boostedIdealData = calculateInvestmentGrowth(20, ANNUAL_INVESTMENT, monthlyAmount, NOMINAL_RETURN);

            const originalIdealValues = originalIdealData.map(d => d.value);
            const boostedIdealValues = boostedIdealData.map(d => d.value);

            const latestBoostedValue = boostedIdealValues[boostedIdealValues.length - 1];
            const finalValueDisplay = new Intl.NumberFormat('de-DE', { style: 'currency', currency: 'EUR', minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(latestBoostedValue);
            
            // Update the chart if it exists, otherwise create it
            if (boostChart) {
                boostChart.data.datasets[1].data = boostedIdealValues;
                boostChart.data.datasets[1].label = `Boosted - €${monthlyAmount.toFixed(0)} Monthly (Final: ${finalValueDisplay})`;
                boostChart.update();
            } else {
                 const ctxBoost = document.getElementById('boostChart').getContext('2d');
                 boostChart = new Chart(ctxBoost, {
                    type: 'line',
                    data: {
                        labels: allAges,
                        datasets: [{
                            label: 'Original Ideal - €0 Monthly (Base €1,000 Annual)',
                            data: originalIdealValues,
                            borderColor: '#7A5BCC', 
                            backgroundColor: 'rgba(122, 91, 204, 0.1)',
                            borderWidth: 3, pointRadius: 0, tension: 0.4, fill: true,
                        }, {
                            label: `Boosted - €${monthlyAmount.toFixed(0)} Monthly (Final: ${finalValueDisplay})`,
                            data: boostedIdealValues,
                            borderColor: '#F26D3D', 
                            backgroundColor: 'rgba(242, 109, 61, 0.2)',
                            borderWidth: 4, pointRadius: 0, tension: 0.4, fill: true,
                        }]
                    },
                    options: {
                         responsive: true, maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: { display: true, text: 'Portfolio Value (€)', font: { size: 14, weight: '600' } },
                                ticks: { callback: function(value, index, values) { 
                                    return '€' + (value / 1000000).toFixed(2) + 'M'; 
                                } }
                            },
                            x: { title: { display: true, text: 'Age', font: { size: 14, weight: '600' } } }
                        },
                        plugins: { legend: { position: 'top' } }
                    }
                 });
            }
        }

        function initializeAll() {
            initGrowthChart();
            initInflationCharts();
            updateBoostChart(); 
            
            document.getElementById('calculateBoostBtn').addEventListener('click', updateBoostChart);
            document.getElementById('monthlyAmount').addEventListener('keyup', (e) => {
                if (e.key === 'Enter') {
                    updateBoostChart();
                }
            });
        }
        
        window.onload = initializeAll;
    </script>
</body>
</html>
